

  <% if(news) { %> 
   <div class="list-group">
   <% for(let obj of news) { %>
     <li class="list-group-item d-flex justify-content-between align-items-center">
         <a href="/news&event/<%= obj.id %>" style="text-decoration: none;"><%= obj.title %></a> 
         <span class="badge badge-primary badge-pill" onclick="newseventsDel('<%= obj.id %>')"> delete </span>
       </li>


       <script>

          function newseventsDel(eventID)
          {
            //alert(eventID)
            if(confirm("Did you want to delete it ?"))
            {
              axios.get(`/deleteEvent/${eventID}`)
              .then(function (response) {
                console.log(response);
                window.location.reload();
              })
              .catch(function (error) {
                console.log(error);
                alert("Not possible");
                location.reload()
              });
            }  
          }
          </script>
   <% } %>
 </div>
 <% } else { %>
   <h1>You have no news.</h1>
 <% } %>
   
