
<%- include('../include/head.ejs') %>

<%- include('../include/navbar.ejs') %>

<div class="container">
  <% if(success) { %>
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Well done!</strong> You have successfully  <a href="#" class="alert-link">uploaded</a>.
      </div>
  <% } %>

  <% if(employee) { %>
      <form method="POST" action="/slipUpload" enctype="multipart/form-data">
            <% for(let obj of employee) { %>
               <legend>payment slip</legend>
               <div class="form-group">
                  <input type="hidden" class="form-control" id="exampleInputId" placeholder="Enter name" name="id" value="<%= obj.id %>" required>
              </div>
              <div class="form-group">
                  <label for="exampleInputEmail1">Employee name</label>
                  <input type="text" class="form-control" id="exampleInputName" placeholder="Enter name" name="name" value="<%= obj.userId %>" required>
              </div>
                  <div class="form-group">
                <label for="exampleInputEmail1">Employee email</label>
                <input type="email" class="form-control" id="exampleInputEmail" placeholder="Enter email" name="email" value="<%= obj.email %>" required>
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">Financial date</label>
                <input type="date" class="form-control" id="exampleInputDate" name="date" required>
              </div>
              <div class="form-group">
                <label for="exampleInputFile">Salary slip</label>
                <input type="file" class="form-control-file" name="file" id="exampleInputFile" aria-describedby="fileHelp" required>
                <small id="fileHelp" class="form-text text-muted">Please choose pdf format.</small>
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            <% } %>
      </form>
      <% } %>
        
     
</div>

<hr>
<%- include('../include/footer.ejs') %>
